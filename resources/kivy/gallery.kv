#:kivy 2.1.0
<GalleryWindow>:
    TopMenuLayout:
        id: top_menu_layout

    RelativeLayout:
        size_hint: 1, 0.05
        pos_hint: {"x":0, "y":0.825}

        Button:
            background_color: 0, 0, 0, 0
            pos_hint: {"x": 0.1, "y":0}
            size_hint: 0.1, None
            height: self.width
            on_release:
                root.go_to_next_screen("image_edition")
        Image:
            source: root.add_image_image
            pos_hint: {"x": 0.1, "y":0}
            size_hint: 0.1, None
            height: self.width
                       
        FocusableTextInput:
            id: name_gallery_input
            text: root.gallery_name
            size_hint: 0.5, 1
            pos_hint: {"x": 0.25, "y": 0}
            hint_text: root.gallery_name_hint_text
            font_name: root.font

    RelativeLayout:
        size_hint: 1, 0.8
        pos_hint: {"x":0, "y":0}
        ScrollView:
            id: scroll_view
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 0

            MyScrollViewLayout:
                id: my_sv_layout
                cols: 1
                height: self.minimum_height+root.label_height
                pos: root.pos
